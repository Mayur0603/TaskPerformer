@model TaskPerformer.Models.Todo

<div class="card shadow-lg border-0 rounded-4 mt-4">
    <div class="card-header bg-primary text-white rounded-top-4">
        <h4 class="mb-0 d-flex align-items-center gap-2">
            🆕 Create New Task
        </h4>
    </div>

    <div class="card-body px-5 py-4 bg-light">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            <div class="mb-3">
                <label asp-for="Title" class="form-label fw-semibold">📌 Title</label>
                <input asp-for="Title" class="form-control form-control-lg rounded-3" placeholder="Enter task title..." />
                <span asp-validation-for="Title" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Discription" class="form-label fw-semibold">📝 Description</label>
                <textarea asp-for="Discription" class="form-control form-control-lg rounded-3" rows="3" placeholder="Add some details..."></textarea>
                <span asp-validation-for="Discription" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="DueDate" class="form-label fw-semibold">📅 Due Date</label>
                <input asp-for="DueDate" type="date" class="form-control form-control-lg rounded-3" />
                <span asp-validation-for="DueDate" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill">← Cancel</a>
                <button type="submit" class="btn btn-success px-5 rounded-pill fw-semibold">
                    ✅ Create Task
                </button>
            </div>
        </form>
    </div>
</div>
