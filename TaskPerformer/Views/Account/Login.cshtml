@model TaskPerformer.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null; // Removes the default layout for a standalone login page
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(135deg, #e2e5f2, #3d2159);
            height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-card {
            width: 100%;
            max-width: 400px;
            padding: 30px;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
        }

        .login-logo {
            width: 60px;
            height: 60px;
            margin-bottom: 15px;
        }

        .form-control {
            border-radius: 8px;
        }

        .btn-primary {
            border-radius: 8px;
        }

        .form-text a {
            color: #764ba2;
            text-decoration: underline;
        }

        .form-text a:hover {
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="login-card text-center">
        <!-- Optional Logo -->
        <img src="https://cdn-icons-png.flaticon.com/512/2919/2919600.png" alt="Logo" class="login-logo" />

        <h4 class="mb-3">Welcome Back 👋</h4>
        <form asp-action="Login" method="post" class="text-start">
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Username</label>
                <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>

        <p class="form-text mt-2">
            Don't have an account?
            <a asp-action="Register" asp-controller="Account">Register here</a>
        </p>
    </div>

    <!-- Bootstrap JS (Optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
